---
layout: layouts/base.njk
---

{# Only include the syntax highlighter CSS on blog posts #}
<link rel="stylesheet" href="/css/prism-okaidia.css" />

<nav class="breadcrumbs">
	<a href="/dev">üêß Dev Blog</a>
	‚Ä∫
	{{ title }}
</nav>


<h1>{{ title }}</h1>

<p>
	<time datetime="{{ page.date | htmlDateString }}">
		{{ page.date | readableDateEnglish }}
	</time>
</p>

<hr>

{{ content | safe }}

{%- if collections.dev %}
{%- set previousPost = collections.dev | getPreviousCollectionItem %}
{%- set nextPost = collections.dev | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<ul class="links-nextprev">
	{%- if previousPost %}<li>Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
	{%- if nextPost %}<li>Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
